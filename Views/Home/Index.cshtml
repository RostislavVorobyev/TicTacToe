@{
    ViewBag.Title = "Tic Tac Toe";
}

<div class="content">
    <span id="gameInformation"></span>
    <div>
        <div id="register">
            <input type="text" class="input" id="gamaName" placeholder="Име" />
            <button type="button" class="button" id="registerName">Започни игра</button>
        </div>
        <div id="findOpponent">
            <strong>Сега потърси опонент</strong>
            <em>You're just a small way from beating your first opponent!</em><br />
            <input type="button" class="button findGame" id="findGame" value="Търси опонент" />
        </div>
        <div id="waitingForOpponent">Търсим опонент, моля изчакайте!</div>
        <div id="game"></div>
        <div class="clear">
            <input type="button" class="button findGame" id="findAnotherGame" value="Започни отново" />
        </div>
        <!--<fieldset>
            <legend>Debug message</legend>
            <ul id="debug"></ul>
        </fieldset>-->
    </div>
</div>
